@{
    ViewData["Title"] = "Chat";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <div class="d-flex align-items-center justify-content-between">
                    <span>Chat with Phi-4</span>
                    <span class="badge bg-light text-primary">Microsoft Foundry</span>
                </div>
            </div>
            <div class="card-body">
                <form id="chatForm" class="mb-3" autocomplete="off">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label for="chatInput" class="form-label">Ask anything about our products or pricing</label>
                        <textarea id="chatInput" class="form-control" rows="3" placeholder="Type your question..." required maxlength="1000"></textarea>
                        <div class="form-text">Press Ctrl + Enter to send quickly. (Max 1000 characters)</div>
                    </div>
                    <div class="d-flex justify-content-end gap-2">
                        <button type="button" id="clearBtn" class="btn btn-outline-secondary">Clear</button>
                        <button type="button" id="sendBtn" class="btn btn-primary">
                            <span class="spinner-border spinner-border-sm me-1 d-none" id="sendSpinner" role="status" aria-hidden="true"></span>
                            Send
                        </button>
                    </div>
                </form>
                <div class="mb-2 d-flex align-items-center justify-content-between">
                    <label for="chatHistory" class="form-label mb-0">Chat transcript</label>
                    <small class="text-muted">Responses are appended below</small>
                </div>
                <textarea id="chatHistory" class="form-control" rows="10" readonly placeholder="Conversation will appear here..."></textarea>
                <div class="form-text mt-2">Responses are generated by your Phi-4 deployment in Microsoft Foundry.</div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (() => {
            const sendBtn = document.getElementById('sendBtn');
            const clearBtn = document.getElementById('clearBtn');
            const spinner = document.getElementById('sendSpinner');
            const input = document.getElementById('chatInput');
            const history = document.getElementById('chatHistory');
            const tokenElement = document.querySelector('input[name="__RequestVerificationToken"]');
            const requestVerificationToken = tokenElement ? tokenElement.value : '';

            function setLoading(isLoading) {
                sendBtn.disabled = isLoading;
                input.disabled = isLoading;
                spinner.classList.toggle('d-none', !isLoading);
            }

            async function sendMessage() {
                const message = input.value.trim();
                if (!message) {
                    input.focus();
                    return;
                }

                setLoading(true);
                try {
                    const response = await fetch('@Url.Action("SendMessage", "Chat")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': requestVerificationToken
                        },
                        body: JSON.stringify({ message })
                    });

                    const payload = await response.json();
                    if (!response.ok) {
                        throw new Error(payload?.error || 'Unexpected error');
                    }

                    const entry = `You: ${message}\nPhi-4: ${payload.reply}\n\n`;
                    history.value = entry + history.value;
                    input.value = '';
                    input.focus();
                } catch (error) {
                    console.error(error);
                    alert(error.message || 'Unable to send message.');
                } finally {
                    setLoading(false);
                }
            }

            sendBtn.addEventListener('click', sendMessage);
            clearBtn.addEventListener('click', () => {
                history.value = '';
                input.value = '';
                input.focus();
            });

            input.addEventListener('keydown', (event) => {
                if (event.key === 'Enter' && event.ctrlKey) {
                    event.preventDefault();
                    sendMessage();
                }
            });
        })();
    </script>
}
